<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>GameSchool - @ViewBag.Title </title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        
        <link href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" rel="stylesheet" type="text/css" />
        <script src="@Url.Content("~/Scripts/jquery-1.7.2.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.js")" type="text/javascript"></script>
        <link href="/bootstrap/css/bootstrap.css" rel="Stylesheet" type="text/css" />
        <link href="/bootstrap/css/bootstrap-responsive.css" rel="Stylesheet" type="text/css" />
        <script src="/bootstrap/js/bootstrap.js" type="text/javascript"></script>
        <script src="/Scripts/common.js" type="text/javascript"></script>
        <meta name="viewport" content="width=device-width" />
    </head>
    <body>
        <header>
            <div class="navbar navbar-fixed-top">
                <div class="navbar-inner">
                    <div class="container-fluid">
                        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        </a>
                        <a class="brand" href="/">Game School</a>
                        
                        <div class="btn-group pull-right">
                            
                            <a class="btn btn-info dropdown-toggle" data-toggle="dropdown" href="#">
                                <i class="icon-user"></i> Erling Guðjohnsen
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="/Account/Profile/">Profile</a></li>
                                <li class="divider"></li>
                                <li><a href="/Account/Logout/">Hætta</a></li>
                            </ul>
                            
                        </div>
                        <div class="btn-group pull-right">
                            
                            <a class="btn btn-danger dropdown-toggle" data-toggle="dropdown" href="#">
                                <i class="icon-exclamation-sign icon-white"></i> 6 Tilkynningar
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="/Account/Profile/">Ný einkun í Vefforritun fyrir Skilaverkefni 2</a></li>
                                <li><a href="/Account/Profile/">Bjarna Jóns líkar við álitið þitt</a></li>
                                <li><a href="/Account/Profile/">Þú fékkst 7 stig í Vefforritun fyrir Skilaverkefni 2</a></li>
                            </ul>
                            
                        </div>
                        <div class="nav-collapse">
                        <ul class="nav">
                            <li class="active">@Html.ActionLink("Heim", "Index", "Home")</li>
                            <li>@Html.ActionLink("Um GameSchool", "About", "Home")</li>
                            <li>@Html.ActionLink("Hafa samband", "Contact", "Home")</li>
                            
                            <li class="dropdown" id="ControlMenu">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#ControlMenu">
                                  Aðgerðir
                                  <b class="caret"></b>
                                </a>
                                <ul class="dropdown-menu">
                                  <li><a href="#">Skráning Notenda</a></li>
                                  <li><a href="#">Skráning Námskeiða</a></li>
                                </ul>
                            </li>
                        </ul>
                        </div><!--/.nav-collapse -->
                    </div>
                </div>
            </div>
        </header>

        <div class="container-fluid" style="margin-top: 60px;">
            <div class="row-fluid">
            <div class="span3">
                @RenderSection("sidebar", false)
            </div><!--/span-->
            <div class="span9">
                @RenderBody()
            </div><!--/span-->
            </div><!--/row-->

            <hr>

            <footer>
            <p>&copy; Reykjavík University - Game School - Group 15 2012</p>
            </footer>

        </div>

        <script src="/bootstrap/js/bootstrap-dropdown.js" type="text/javascript"></script>
    </body>
</html>
