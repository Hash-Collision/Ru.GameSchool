@model Ru.GameSchool.DataLayer.Repository.LevelExamAnswer

<div id="examAnswerForm" class="modal" style="display: none">
    <div class="modal-header">
        <button class="close" data-dismiss="modal">×</button>
        <h3>Búa til svar</h3>
    </div>
    <div class="modal-body">

    @using (Html.BeginForm("ExamAnswer", "Exam", FormMethod.Post))
    {
        <fieldset>
            <legend>Skrá nýtt svar</legend>
            @Html.Hidden("LevelExamQuestionId", 0)
            <div class="control-group">
                @Html.LabelFor(m => m.Answer)
                <div class="controls">
                    @Html.TextBoxFor(m => m.Answer, new { @class = "input-xlarge" })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.Answer)</span>
                </div>
            </div>
            <p><input value="Vista" type="submit" /></p>
        </fieldset>    
    }

    </div>
    <div class="modal-footer">
        <a href="#" class="btn" data-dismiss="modal">Loka</a>
    </div>
</div>
