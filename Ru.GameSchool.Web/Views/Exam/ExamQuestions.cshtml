@{
    ViewBag.Title = "CreateQuestion";
}
@model Ru.GameSchool.DataLayer.Repository.LevelExamQuestion

@section sidebar {
    @Html.Partial("_LeftSideBar")
}

<h2>Spurningar í: @ViewBag.Exam.Name</h2>

<ol>
@foreach(var item in ViewBag.QuestionList)
{
    <li>@item.Question
    <ol>
        @foreach (var answer in item.LevelExamAnswers)
        {
            <li>@answer.Answer</li>
        }
    </ol><br />
    </li>
}
</ol>

@using (Html.BeginForm("ExamQuestion", "Exam", FormMethod.Post))
{
    <fieldset>
        <legend>Ný spurning</legend>
        @Html.HiddenFor(model => model.LevelExamId)
        <div class="control-group">
            @Html.LabelFor(m => m.Question)
            <label for="" class="control-label"></label>
            <div class="controls">
                @Html.TextBoxFor(model => model.Question, new { @class = "input-xlarge" })
                <span class="help-inline">@Html.ValidationMessageFor(model => model.Question)</span>
            </div>
        </div>
        <p><input value="Vista" type="submit" /></p>
    </fieldset>    
}