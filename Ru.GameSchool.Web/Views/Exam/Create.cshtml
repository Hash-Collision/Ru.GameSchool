@model Ru.GameSchool.DataLayer.Repository.LevelExam


<script src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Próf</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>
        <div class="control-group">
            <label class="control-label">
                Hlutfall prósentu</label>
            <div class="controls">
                @Html.DropDownListFor(m => m.GradePercentageValue, ViewBag.GradePercentageValues as IEnumerable<SelectListItem>)
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">
                Borð númer</label>
            <div class="controls">
                @Html.DropDownListFor(m => m.LevelId, ViewBag.MapCount as IEnumerable<SelectListItem>)
            </div>
        </div>
        @for (int i = 1; i <= 10; i++)
        {
            <div class="control-group">
                <label class="control-label">
                    Spurning nr.@i
                </label>
                <div class="controls">
                    @Html.EditorFor(m => m.LevelExamQuestions.ElementAtOrDefault(i).Question)
                </div>
            </div>
            for (int j = 1; j <= 4; j++)
            { 
                <div class="control-group">
                <label class="control-label">
              &nbsp;&nbsp;&nbsp;      Svar nr.@j við spurningu nr.@i
                </label>
                <div class="controls"> 
               &nbsp;&nbsp;&nbsp;     @Html.EditorFor(m => m.LevelExamQuestions.ElementAtOrDefault(j).LevelExamAnswers.ElementAtOrDefault(j).Answer)
                </div>
            </div>
            }
        }
        <div class="control-group">
            <div class="controls">
                <button type="submit" value="Save" class="btn btn-success">
                    <i class="icon-ok icon-white"></i>Búa til próf
                </button>
            </div>
        </div>
    </fieldset>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
