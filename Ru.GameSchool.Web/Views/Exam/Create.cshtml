@model Ru.GameSchool.DataLayer.Repository.LevelExam
@{
    ViewBag.Title = "Búa til nýtt próf";
}

<script language="javascript">
    $(document).ready(function () {
        jQuery.validator.methods["date"] = function (value, element) {
            return true;
        };
        $.datepicker.setDefaults({ validateDate: 'false' });
        $.datepicker.regional['is-IS']
        $('.Start').datepicker({ dateFormat: "d.m.yy 00:00:01" });
        $('.Stop').datepicker({ dateFormat: "d.m.yy 23:59:59" });
    });
</script>


@using (Html.BeginForm("Create", "Exam", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Nýtt próf</legend>
        <div class="control-group">
            @Html.LabelFor(m => m.Name, new { @class = "control-label" })
            <div class="controls">
                @Html.EditorFor(m => m.Name)
                <span class="help-inline">@Html.ValidationMessageFor(x => x.Name)</span>
            </div>
        </div>
        <div class="control-group">
            @Html.LabelFor(m => m.Description, new { @class = "control-label" })
            <div class="controls">
                @Html.TextAreaFor(m => m.Description, new { @class = "input-xlarge" })
            </div>
        </div>
        <div class="control-group">
            @Html.LabelFor(m => m.GradePercentageValue, new { @class = "control-label" })
            <div class="controls">
                @Html.DropDownListFor(m => m.GradePercentageValue, ViewBag.GradePercentageValues as IEnumerable<SelectListItem>, "Veldu prósentu")
            </div>
        </div>
        <div class="control-group">
            @Html.LabelFor(m => m.LevelId, new { @class = "control-label" })
            <div class="controls">
                @Html.DropDownListFor(m => m.LevelId, (IEnumerable<SelectListItem>)ViewBag.Levels, "Veldu borð")
            </div>
        </div>
        <div class="control-group">
            @Html.LabelFor(x => x.Start, new { @class = "control-label" })
            <div class="controls">
                @Html.TextBoxFor(x => x.Start, new { @class = "input-xlarge", @data_datepicker = "datepicker" })
                <span class="help-inline">@Html.ValidationMessageFor(x => x.Start)</span>
            </div>
        </div>
        <div class="control-group">
            @Html.LabelFor(x => x.Stop, new { @class = "control-label" })
            <div class="controls">
                @Html.TextBoxFor(x => x.Stop, new { @class = "input-xlarge", @data_datepicker = "datepicker" })
                <span class="help-inline">@Html.ValidationMessageFor(x => x.Stop)</span>
            </div>
        </div>
        <div class="form-actions">
                <button type="submit" value="Save" class="btn btn-primary">
                     Búa til próf
                </button>
                @Html.ActionLink("Fara í lista yfir próf", "Index", new { id = ViewBag.CourseId }, new { @class = "btn" })
        </div>
    </fieldset>
}
<div>
</div>
