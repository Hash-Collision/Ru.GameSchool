@{
    ViewBag.Title = "Forsíða";
}

<div class="hero-unit">
    <h1>GameSchool</h1>
    @foreach (var item in ViewBag.AnnouncementList)
    {
        <article>
            <h3><span class="gray">@item.DisplayDateTime.ToString("dd.MM.yyyy") | </span><a data-toggle="modal" href="/Course/Announcement/@item.AnnouncementId">@item.Title</a></h3>
            <p>
                @item.Article
            </p>
        </article>
    }
</div>


<div class="row-fluid course-box">
    
    <h2>Þín námskeið eru hér</h2>
@if (ViewBag.UserCourseList != null && ViewBag.UserCourseList.Count > 0)
{
    foreach (var item in ViewBag.FrontCourseList)
    {
        <text>
        <div class="row-fluid">
            @foreach (var nesteditem in item)
            {
            <div class="span4 well">
                <h3>@nesteditem.Course.Name</h3>
                <ul>
                    @foreach(var listitem in nesteditem.Content)
                    {
                        <li><a href="@listitem.ItemUrl()">@listitem.ItemName()</a> @if (listitem.IsNew()) {<span class="label label-important">Nýtt</span>}</li>
                    }
                </ul>
                <p>@Html.ActionLink("Fara í námskeið", "Item", "Course", new { id = @nesteditem.Course.CourseId }, new { @class = "btn btn-small" })</p>
            </div><!--/span-->
            }
        </div><!--/row-->
        </text>
    }
}
else
{
    <p>Notandi er ekki skráður í námskeið</p>
}
</div>
