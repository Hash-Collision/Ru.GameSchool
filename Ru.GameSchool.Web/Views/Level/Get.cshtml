@model Ru.GameSchool.DataLayer.Repository.Level


<ul class="nav nav-tabs">

            @foreach (var l in ViewBag.LevelTabs)
            { 
                 <li @if (l.levelId == Model.LevelId) { <text>class="active"</text> } >
                         <a @if(l.enabled || User.IsInRole("Teacher")) { <text>href="/Level/Get/@l.levelId"</text> } >
                            @if(l.levelCompleteness == Ru.GameSchool.BusinessLayer.Enums.LevelCompleteness.Complete)
                            { <i class="icon-thumbs-up"></i> }
                            else if (l.levelCompleteness == Ru.GameSchool.BusinessLayer.Enums.LevelCompleteness.Failed)
                            { <i class="icon-thumbs-down"></i> }
                        @l.levelName
                         </a>
                 </li>
            } 
    </ul>


    <div class="display-label">
        @if (User.IsInRole("Teacher"))
        {
            <div class="pull-right">@Html.ActionLink("Breyta borði", "Edit", new { id = Model.LevelId }, new { @class="btn btn-small btn-success" })</div>
        }
        <h2>@Html.DisplayFor(model => model.Name)</h2>
        @Html.DisplayNameFor(model => model.Start):
        @Html.DisplayFor(model => model.Start) - 
        @Html.DisplayNameFor(model => model.Stop):
        @Html.DisplayFor(model => model.Stop)
    </div>


        

    <div class="row-fluid">  
        <div class="span4 well">
            <h2>Myndbönd</h2>
            <ul>
            @foreach (var m in ViewBag.MaterialsVideo)
            {
                  <li><a href="/Material/Get/@m.LevelMaterialId">@m.Title</a></li>
            }
            </ul>
            <p>
            <a class="btn" href="/Material/1">Öll myndbönd &raquo;</a></p>
        </div>
        <div class="span4 well">
            <h2>Glærur</h2>
            <ul>
            @foreach (var m in ViewBag.MaterialsSlides)
            {
                  <li><a href="/Material/Get/@m.LevelMaterialId">@m.Title</a></li>
            }
            </ul>
            <p>
            <a class="btn" href="/Material/2">Allar glærur  &raquo;</a></p>
        </div>
        <div class="span4 well">
            <h2>Tilkynningar</h2>
            <ul>
            @foreach (var m in ViewBag.MaterialsMessages)
            {
                  <li><a href="/Material/Get/@m.LevelMaterialId">@m.Title</a></li>
            }
            </ul>
            <p>
            <a class="btn" href="/Material/">Allar tilkynningar &raquo;</a></p>
        </div>
        </div>
                <!--/row-->
                <div class="row-fluid">
                <div class="span4 well">
            <h2>Verkefni</h2>
            <ul>
            @foreach (var m in ViewBag.Projects)
            {
                <li>@Html.ActionLink(m.Name as string, User.IsInRole("Student") ? "Get" : "TeacherGet", "Project", new { id = m.LevelProjectId }, null)</li>
            }
            </ul>
            <p>
            @Html.ActionLink("Öll verkefni",""
            <a class="btn" href="/Project/">Öll verkefni &raquo;</a></p>
        </div>
        <div class="span4 well">
            <h2>Netpróf</h2>
            <ul>
            @foreach (var exam in ViewBag.Exams)
            {
                  <li>@Html.ActionLink(exam.Name as string, "Index", "Exam", new { id = ViewBag.CourseId }, null)</li>
            }
            </ul>
            <p>
             @Html.ActionLink("Öll próf", "Index", "Exam", new { id = ViewBag.CourseId }, new { @class = "btn" })
        </div>
        <div class="span4 well">
            <h2>Skjöl</h2>
            <ul>
            @foreach (var m in ViewBag.MaterialsDocs)
            {
                  <li><a href="/Material/Get/@m.LevelMaterialId">@m.Title</a></li>
            }
            </ul>
            <p>
            <a class="btn" href="/Material/3">Öll skjöl &raquo;</a></p>
        </div>
    </div>

      




