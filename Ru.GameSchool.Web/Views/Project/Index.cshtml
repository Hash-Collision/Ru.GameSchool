@{
    ViewBag.Title = "Verkefni";
}


<h1>@ViewBag.CourseName</h1>

<h2>
    Listi yfir verkefni</h2>
@foreach (var item in ViewBag.Projects)
{
    
                
    <ul>
        <li>@Html.ActionLink((@item.Name + " - Skiladagur: " + @item.Start.ToString("dd.MM.yyyy HH:mm")) as string, "Get", new { LevelProjectId = @item.LevelProjectId })<li>
    </ul>
}


<input type="button" class="ui-button-text-only" value="Búa til nýtt verkefni" onclick="location.href='@Url.Action("Create","Project")'" />
  
